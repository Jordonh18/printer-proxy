#!/bin/sh
# prerm script for continuum
#
# See: dh_installdeb(1)

set -e

case "$1" in
    remove|upgrade|deconfigure)
        # Stop the service gracefully
        if systemctl is-active --quiet continuum.service 2>/dev/null; then
            systemctl stop continuum.service || true
        fi
        ;;

    failed-upgrade)
        ;;

    *)
        echo "prerm called with unknown argument '$1'" >&2
        exit 1
        ;;
esac

exit 0
